# =====================================================
# LOOKBOOK BACKEND ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your values
# =====================================================

# Server Configuration
PORT=4002
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Database Configuration (Option 1: Individual params)
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=lookbook
PG_USER=postgres
PG_PASSWORD=postgres

# Database Configuration (Option 2: Connection URL)
# Use this if you have a hosted database (Heroku, Railway, Neon, etc.)
# Uncomment and use instead of individual params above
# DATABASE_URL=postgresql://user:password@host:5432/lookbook

# AI Features (Optional)
# Get from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-...

# CRM Integration (Optional)
# Webhook URL to forward lead events to
# CRM_WEBHOOK_URL=https://your-crm.com/api/leads
# CRM_WEBHOOK_AUTH=Bearer your-token-here

# Admin Authentication
# For security, change these before deploying to production
ADMIN_USERNAME=admin
# Generate password hash with: node generate-password.js YourSecurePassword
# ADMIN_PASSWORD_HASH=$2b$10$...
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRY=7d


